{
  "name": "backend-multitenant-express",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "npx nodemon server.js",
    "dev:full": "docker compose -f docker-compose.agent.yml up -d && npx nodemon server.js",
    "vault:up": "docker compose -f docker-compose.agent.yml up -d",
    "vault:down": "docker compose -f docker-compose.agent.yml down",
    "vault:restart": "docker compose -f docker-compose.agent.yml restart vault-agent",
    "vault:logs": "docker logs vault-agent --tail 20",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.integration.config.js",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.5.0",
    "jsonwebtoken": "^9.0.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.4",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.10.0",
    "postcss": "^8.5.6",
    "sequelize": "^6.37.1",
    "sequelize-cli": "^6.6.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tailwindcss": "^4.1.17",
    "uuid": "^9.0.0",
    "winston": "^3.18.3",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.8",
    "esmock": "^2.7.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.4"
  }
}
